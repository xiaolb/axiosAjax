{
    "compilerOptions": {
        "paths": {
            "*": ["types/*"]
        },
        "baseUrl": ".",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es2015",
        "target": "es6",
        "jsx": "preserve",
        "experimentalDecorators": true,
        "allowJs": true,
        "downlevelIteration": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "lib": ["es5", "es2015.promise", "es6", "dom", "es2017"]
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*", "examples/qrcode.js"],
    "compileOnSave": false
}
