{
    "compilerOptions": {
        "paths": {
            "*": ["types/*"]
        },
        "baseUrl": ".",
        "outDir": "./.temp/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esNext",
        "target": "esNext",
        "jsx": "preserve",
        "experimentalDecorators": true,
        "allowJs": true,
        "downlevelIteration": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "lib": ["es5", "es2015.promise", "es6", "dom", "es2017"]
    },
    "exclude": ["node_modules"],
    "include": ["src/*.ts"],
    "compileOnSave": false
}
